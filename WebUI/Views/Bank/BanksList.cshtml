@model List<BankDto>

<div class="main-content-block">
	@if(Model.Count==0)
	{
		<h4 class="empty-list">
			Bank list is empty, you can create bank by button bellow
		</h4>
	}
	<div id="elements-block" data-items="@Model">
		@foreach (BankDto bank in Model)
		{
			<a href="" class="text-reset text-decoration-none">
				<table class="bank-table">
					<tr>
						<th>
							Bank name: @bank.BankName
						</th>
					</tr>
					<tr>
						<th>
							Our rating is @bank.Rating
						</th>
					</tr>
					<tr>
						<th>
							We have @bank.ActiveClientsCount active clients
						</th>
					</tr>
				</table>
			</a>

			<div class="action-buttons">
				<form asp-controller="Bank" asp-action="UpdateBank" asp-route-bankId=@bank.Id id="add-form" method="get">
					<button id="update-element" type="submit">Update Bank</button>
				</form>
				<form asp-controller="Bank" asp-action="DeleteBank" asp-route-bankId=@bank.Id id="add-form" method="post">
					<button id="delete-element" type="submit">Delete Bank</button>
				</form>
			</div>

			//@await Html.PartialAsync("_LoadBanks");
		}
	</div>

	<div class="d-flex flex-row align-items-center action-panel gap-4">
		<button class="load-more">Load More</button>
		<form asp-controller="Bank" asp-action="AddBank" id="add-form" method="get">
			<button class="add-element" type="submit">Add Bank</button>
		</form>
	</div>
</div>

@section backButton {
	<a asp-controller="Home" asp-action="Index" class="text-reset text-decoration-none">Back to main page</a>
}