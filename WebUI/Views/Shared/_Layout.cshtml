@inject IViewLocalizer Localizer
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/StyleSheet.css")"/>
    <link href="~/images/favicon/favicon-admin.svg" rel="icon" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>
<body>
    <header class="d-flex flex-row gap-4 align-items-center">
        <div id="header-logo" class="d-flex flex-row ps-4">
            <div id="back-icon">
                @RenderSection("backButton", required: false)
            </div>
            <h2 class="header-info">@Localizer["header"] </h2>
        </div>
        <div id="language">
            <span id="language-name">EN&#9662;</span>
            <form asp-controller="Language" asp-action="SetLanguage" id="chose-language">
                <label>
                    <input type="radio" name="language" value="en-GB" /> EN
                </label>
                <label>
                    <input type="radio" name="language" value="uk-UA" /> UA
                </label>
                <input type="hidden" name="culture"/>
                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
            </form>
        </div>
        <div id="auth">Auth</div>
    </header>

    <section id="header-functionality">
        <aside>
            <div id="aside-icons">
                <img src="/images/menu/menu.svg" alt="open-menu" id="open-menu" class="">
                <img src="/images/menu/cross.svg" alt="close-menu" id="close-menu" class="clicked">
            </div>

            <ul class="ul-none d-flex flex-column gap-2 align-items-center" id="menu">
                <li id="banks-menu-buttton"><a asp-controller="Bank" asp-action="BanksList" class="text-reset text-decoration-none">@Localizer["banks"]</a></li>
                <li id="card-tariffs-menu-buttton"><a asp-controller="CardTariffs" asp-action="CardTariffsList" class="text-reset text-decoration-none">@Localizer["cards"]</a></li>
                <li><a href="#" class="text-reset text-decoration-none">@Localizer["clients"]</a></li>
                <li><a href="#" class="text-reset text-decoration-none">@Localizer["employees"]</a></li>
                <li><a href="#" class="text-reset text-decoration-none">@Localizer["news"]</a></li>
                <li><a href="#" class="text-reset text-decoration-none">@Localizer["vacancies"]</a></li>
            </ul>

            @RenderSection("Search", required: false)
            @RenderSection("ColumsHandler", required: false)

        </aside>
        

    </section>


    <main>
        @RenderBody()
    </main>

    <footer class="container-fluid">
        <div class="row">
            <div class="col-sm-2 left-empty-part"></div>
            <div class="col-sm-8 container-fluid">
                <div class="row p-0-75 ">

                    <div class="col-sm-6">
                        <ul class="list-unstyled">
                            <li><!--TO DO: bank image container--><h5 class="text-white">@Localizer["aboutUs"]</h5></li>
                            <li>
                                <a href="https://github.com/Andrii4424" target="_blank">
                                    <img src="~/images/footer/github-logo.svg" alt="Github" class="footer-images" />
                                </a>

                            <li>
                            <li class="d-flex mt-2">
                                <a href="https://t.me/Pipsqueak3" class="text-reset text-decoration-reset" target="_blank">
                                    <img src="~/images/footer/telegram-logo.svg" alt="Telegram" class="footer-images" />
                                </a>
                                <a href="viber://chat?number=%2B380639615125" target="_blank">
                                    <img src="~/images/footer/viber-logo.svg" alt="Viber" class="footer-images ml-0-75" />
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-sm-6 text-white">
                        <ul class="list-unstyled">
                            <li><h6>@Localizer["contactUs"]</h6></li>
                            <li>Telegram: Pipsqueak3</li>
                            <li>andreyfalchevskiy@gmail.com</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-2 rigth-empty-part"></div>
        </div>
    </footer>

    <div id="confirm-delete-window">
        <div id="delete-window">
            <h2>🗑️ @Localizer["confirmDelete"]</h2>
            <p id="confirm-delete-text"></p>
            <div class="delete-buttons">
                <button class="confirm-delete-button">@Localizer["delete"]</button>
                <button class="cancel-delete-button">@Localizer["cancel"]</button>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <script type="module" src="~/js/_Layout.js" defer></script>
    @RenderSection("additionalScripts", required: false)
</body>
</html>
